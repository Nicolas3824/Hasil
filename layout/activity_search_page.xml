<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_menu"
    tools:context=".SearchPage">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cari"
        android:singleLine="true"
        android:id="@+id/etsearch"
        android:layout_margin="20dp">
    </EditText>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="1313px"
        android:layout_below="@id/etsearch"
        android:layout_margin="10dp"
        android:divider="@color/black"
        android:dividerHeight="2dp"
        android:background="@drawable/borderlayout"
        ></ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/list_view">
        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imghome"
                    android:layout_width="70dp"
                    android:layout_height="140px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="HomePage"
                    android:src="@drawable/house"></ImageButton>
                <TextView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imghome"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="@string/Home" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgsrc"
                    android:paddingLeft="10dp"
                    android:layout_width="60dp"
                    android:layout_height="138px"
                    android:src="@drawable/search"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"></ImageButton>
                <TextView
                    android:id="@+id/src"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgsrc"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Search" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgfav"
                    android:layout_width="65dp"
                    android:layout_height="135px"
                    android:src="@drawable/heart"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="FavoritRestoranPage"></ImageButton>
                <TextView
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgfav"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Favorit" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgres"
                    android:layout_width="70dp"
                    android:layout_height="137px"
                    android:src="@drawable/history"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="HistoryReservasi"></ImageButton>
                <TextView
                    android:id="@+id/res"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgres"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Reservation" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="200px"
            android:layout_marginRight="20px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgakun"
                    android:layout_width="70dp"
                    android:layout_height="140px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="PageAkun"
                    android:src="@drawable/user"></ImageButton>
                <TextView
                    android:id="@+id/akun"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgakun"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Akun" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>