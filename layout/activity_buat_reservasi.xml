<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_menu"
    tools:context=".BuatReservasi">

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="170dp"
        android:background="@drawable/borderlayout"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/tvrestoran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:text="Restoran A"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvrestoran"
                android:layout_marginTop="7dp"
                android:text="Jumlah Pelanggan"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvrestoran"
                android:layout_marginTop="40dp"
                android:text="Jadwal Reservasi"></TextView>

            <EditText
                android:id="@+id/JumlahPelanggan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="35dp"
                android:hint="Jumlah Pelanggan"
                android:inputType="number"
                android:textSize="40px"></EditText>

            <EditText
                android:id="@+id/tanggal"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="68dp"
                android:hint="Jadwal Reservasi"
                android:focusable="false"
                android:textSize="40px"></EditText>

            <ImageButton
                android:id="@+id/calender"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="287dp"
                android:layout_marginTop="71dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/kalendar"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Reservasi"
                android:layout_below="@id/tvrestoran"
                android:layout_marginTop="75dp">
            </TextView>
            <EditText
                android:id="@+id/waktu"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="108dp"
                android:hint="Jam Reservasi"
                android:focusable="false"
                android:textSize="40px"></EditText>
            <ImageButton
                android:id="@+id/time"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="287dp"
                android:layout_marginTop="111dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/chronometer"></ImageButton>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permintaan Khusus (Optional)"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/PermintaanKhusus"
            android:inputType="text"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Telp yang bisa dihubungi"></TextView>

        <EditText
            android:id="@+id/NoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text="0"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rekening"
            android:lines="2"
            android:text="Rekening">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hargatotalmenu"
            android:text="Harga">
        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Bukti Pembayaran"
            android:textColor="#000000"
            app:backgroundTint="#E4E1E1"
            android:id="@+id/upload">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=""></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tes"
            android:text=""></TextView>

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/Reservasi"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Reservasi"
            android:textColor="#000000"
            app:backgroundTint="#E4E1E1"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imghome"
                    android:layout_width="70dp"
                    android:layout_height="140px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="HomePage"
                    android:src="@drawable/house"></ImageButton>
                <TextView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imghome"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Home" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgsrc"
                    android:layout_width="60dp"
                    android:layout_height="138px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="SearchPage"
                    android:src="@drawable/search"></ImageButton>
                <TextView
                    android:id="@+id/src"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgsrc"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Search" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgfav"
                    android:layout_width="65dp"
                    android:layout_height="135px"
                    android:src="@drawable/heart"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="@color/white"
                    android:onClick="FavoritRestoranPage"
                    android:scaleType="centerCrop"></ImageButton>

                <TextView
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgfav"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Favorit" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgres"
                    android:layout_width="70dp"
                    android:layout_height="137px"
                    android:src="@drawable/history"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="HistoryReservasi">
                </ImageButton>
                <TextView
                    android:id="@+id/res"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgres"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Reservation" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="200px"
            android:layout_marginRight="20px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgakun"
                    android:layout_width="70dp"
                    android:layout_height="140px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="PageAkun"
                    android:src="@drawable/user"></ImageButton>
                <TextView
                    android:id="@+id/akun"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgakun"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Akun" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>