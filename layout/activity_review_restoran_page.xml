<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    tools:context=".ReviewRestoranPage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/rl1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="83dp"
                android:layout_margin="20dp"
                android:id="@+id/dtlimgres"
                android:src="@drawable/user"></ImageView>

            <TextView
                android:id="@+id/namarestoran"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="20dp"
                android:lines="2"
                android:layout_marginRight="50dp"
                android:textColor="@color/black"
                android:text="Restoran"></TextView>

            <TextView
                android:id="@+id/jenisrestoran"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="70dp"
                android:lines="2"
                android:textColor="@color/black"
                android:text="Family Restoran"></TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/rl1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berikan Rating Anda">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pelayanan">
            </TextView>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/VariasiMenuRestoran"
                android:inputType="numberSigned"
                android:hint="Rating">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Fasilitas">
            </TextView>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/PelayananRestoran"
                android:inputType="numberSigned"
                android:hint="Rating">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Suasana">
            </TextView>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/SuasanaRestoran"
                android:inputType="numberSigned"
                android:hint="Rating">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Higienis">
            </TextView>

            <EditText
                android:id="@+id/HigienisRestoran"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="numberSigned"
                android:hint="Rating"></EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Kelayakan Harga">
            </TextView>

            <EditText
                android:id="@+id/kelayakanharga"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="numberSigned"
                android:hint="Rating"></EditText>
            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/KomentarRestoran"
                android:lines="2"
                android:hint="Komentar Anda (Optional)">
            </EditText>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                app:backgroundTint="#E4E1E1"
                android:id="@+id/Konfirmasi"
                android:text="Konfirmasi">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ll">
            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="200px">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <ImageButton
                        android:id="@+id/imghome"
                        android:layout_width="70dp"
                        android:layout_height="140px"
                        android:backgroundTint="@color/white"
                        android:onClick="HomePage"
                        android:scaleType="centerCrop"
                        android:src="@drawable/house"></ImageButton>
                    <TextView
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_below="@id/imghome"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5px"
                        android:paddingLeft="15dp"
                        android:text="@string/Home"
                        android:textColor="#000000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imgsrc"
                        android:layout_width="100dp"
                        android:layout_height="138px"
                        android:src="@drawable/search"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="SearchPage"></ImageButton>
                    <TextView
                        android:id="@+id/src"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgsrc"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Search" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imgfav"
                        android:layout_width="65dp"
                        android:layout_height="135px"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/heart"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="FavoritRestoranPage"></ImageButton>
                    <TextView
                        android:id="@+id/fav"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgfav"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Favorit" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imgres"
                        android:layout_width="70dp"
                        android:layout_height="137px"
                        android:src="@drawable/history"
                        android:backgroundTint="@color/white"
                        android:onClick="HistoryReservasi"
                        android:scaleType="centerCrop"></ImageButton>

                    <TextView
                        android:id="@+id/res"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgres"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Reservation" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="200px"
                android:layout_marginRight="20px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imgakun"
                        android:layout_width="70dp"
                        android:layout_height="140px"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="PageAkun"
                        android:src="@drawable/user"></ImageButton>
                    <TextView
                        android:id="@+id/akun"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgakun"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Akun" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>


</ScrollView>