<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    tools:context=".FavoritMenuPage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll">
        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Restoran"
            android:textColor="#000000"
            android:onClick="FavoritRestoranPage"
            app:backgroundTint="#E4E1E1">
        </Button>
        <Button
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            app:backgroundTint="@color/white"
            android:text="Menu">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/ll"
        android:id="@+id/ll2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/borderlayout"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/black"
            android:dividerHeight="2dp"
            android:id="@+id/recyclerView">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll2">
        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imghome"
                    android:layout_width="70dp"
                    android:layout_height="140px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="HomePage"
                    android:src="@drawable/house"></ImageButton>
                <TextView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imghome"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="@string/Home" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgsrc"
                    android:layout_width="60dp"
                    android:layout_height="138px"
                    android:src="@drawable/search"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="SearchPage"></ImageButton>
                <TextView
                    android:id="@+id/src"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgsrc"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Search" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgfav"
                    android:layout_width="65dp"
                    android:layout_height="135px"
                    android:src="@drawable/heart"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"></ImageButton>
                <TextView
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgfav"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Favorit" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgres"
                    android:layout_width="70dp"
                    android:layout_height="137px"
                    android:src="@drawable/history"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="HistoryReservasi"></ImageButton>
                <TextView
                    android:id="@+id/res"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgres"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Reservation" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="200px"
            android:layout_marginRight="20px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgakun"
                    android:layout_width="70dp"
                    android:layout_height="140px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="PageAkun"
                    android:src="@drawable/user"></ImageButton>
                <TextView
                    android:id="@+id/akun"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgakun"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Akun" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>