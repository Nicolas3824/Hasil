<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    tools:context=".ReviewRestoran">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/rl1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="83dp"
                    android:layout_margin="20dp"
                    android:id="@+id/dtlimgres"
                    android:src="@drawable/user"></ImageView>

                <TextView
                    android:id="@+id/tvres"
                    android:layout_marginRight="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:lines="3"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/dtlimgres"
                    android:text="Restoran"></TextView>

                <Button
                    android:id="@+id/btnres"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tvres"
                    android:textColor="#000000"
                    app:backgroundTint="#E4E1E1"
                    android:onClick="ReservasiRestoran"
                    android:text="Reservasi"></Button>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:layout_marginTop="90dp"
                    android:id="@+id/jenisrestoran"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/dtlimgres"
                    android:text="Family Restoran"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/rl1"
                android:id="@+id/rl2"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl2trk"
                    android:text="Total Rating Keseluruhan">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl2trk"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="65dp"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:id="@+id/totalrating"
                    android:textColor="@color/black"
                    android:text="4.7">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="Fasilitas">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_marginLeft="130dp"
                    android:layout_height="wrap_content"
                    android:text="Pelayanan">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_below="@id/rl2trk"
                    android:id="@+id/ratingtemp"
                    android:layout_marginLeft="60dp"
                    android:text="4.7">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_below="@id/rl2trk"
                    android:layout_marginLeft="155dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingpelayanan"
                    android:text="4.5">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingtemp"
                    android:id="@+id/suasana"
                    android:layout_marginLeft="45dp"
                    android:layout_toRightOf="@id/rl2trk"
                    android:text="Suasana">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingtemp"
                    android:layout_marginLeft="140dp"
                    android:layout_toRightOf="@id/rl2trk"
                    android:text="Higienis">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/suasana"
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@id/rl2trk"
                    android:id="@+id/ratingsuasana"
                    android:text="4.7">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/suasana"
                    android:layout_marginLeft="155dp"
                    android:layout_toRightOf="@id/rl2trk"
                    android:id="@+id/ratinghigienis"
                    android:text="4.9">
                </TextView>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingtemp"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:lines="2"
                    android:text="KelayakanHarga">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/suasana"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="220dp"
                    android:id="@+id/ratingkelayakan"
                    android:text="4.7">
                </TextView>
                <CheckBox
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/favorit"
                    android:layout_below="@id/suasana"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="50dp"
                    app:useMaterialThemeColors="false"
                    android:button="@drawable/favoriteselector">
                </CheckBox>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl2"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl3detail"
                    android:textColor="#000000"
                    app:backgroundTint="#E4E1E1"
                    android:onClick="DetailRestoranPage"
                    android:text="Detail">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl3DaftarMenu"
                    android:layout_toRightOf="@+id/rl3detail"
                    android:textColor="#000000"
                    app:backgroundTint="#E4E1E1"
                    android:onClick="DaftarMenuRestoran"
                    android:text="Daftar Menu">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl3Review"
                    android:textColor="#000000"
                    app:backgroundTint="@color/white"
                    android:layout_toRightOf="@id/rl3DaftarMenu"
                    android:text="Review">
                </Button>
            </RelativeLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tampilanuser"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_margin="20dp"
            android:background="@drawable/borderlayout"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/scrollView">
            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imghome"
                        android:layout_width="70dp"
                        android:layout_height="140px"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="HomePage"
                        android:src="@drawable/house"></ImageButton>
                    <TextView
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imghome"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="@string/Home" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imgsrc"
                        android:layout_width="60dp"
                        android:layout_height="138px"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/search"
                        android:scaleType="centerCrop"
                        android:onClick="SearchPage"></ImageButton>
                    <TextView
                        android:id="@+id/src"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgsrc"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Search" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imgfav"
                        android:layout_width="65dp"
                        android:layout_height="135px"
                        android:src="@drawable/heart"
                        android:layout_marginTop="1dp"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="FavoritRestoranPage"></ImageButton>
                    <TextView
                        android:id="@+id/fav"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgfav"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Favorit" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imgres"
                        android:layout_width="70dp"
                        android:layout_height="137px"
                        android:src="@drawable/history"
                        android:backgroundTint="@color/white"
                        android:onClick="HistoryReservasi"
                        android:scaleType="centerCrop"></ImageButton>

                    <TextView
                        android:id="@+id/res"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgres"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Reservation" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="200px"
                android:layout_marginRight="20px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imgakun"
                        android:layout_width="70dp"
                        android:layout_height="140px"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="PageAkun"
                        android:src="@drawable/user"></ImageButton>
                    <TextView
                        android:id="@+id/akun"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgakun"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Akun" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>