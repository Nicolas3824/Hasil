<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_menu"
    tools:context=".PageAkun">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/namauser"
        android:text="">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Informasi Akun">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvreservasi"
            android:layout_marginLeft="75dp"
            android:text="0">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvreservasi"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:text="Reservasi">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvreservasi"
            android:id="@+id/totalreview"
            android:layout_marginLeft="100dp"
            android:text="0">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvreservasi"
            android:layout_toRightOf="@id/tvreservasi"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="5dp"
            android:text="Review">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvreservasi"
            android:layout_marginLeft="200dp"
            android:id="@+id/totalfavorit"
            android:text="0">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvreservasi"
            android:layout_toRightOf="@id/tvreservasi"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="5dp"
            android:text="Favorit">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderlayout">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivuser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/account"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivuser"
                android:layout_marginLeft="20dp"
                android:text="Ubah Data Akun">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivuser"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:text="Kelola Akun">
            </TextView>
            <ImageButton
                android:id="@+id/imgakunn"
                android:layout_width="40dp"
                android:layout_height="100px"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/arrow"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:onClick="PageAkunDetail"></ImageButton>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderlayout">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivpref"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/preferences"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivpref"
                android:layout_marginLeft="20dp"
                android:text="Preferensi">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivpref"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:text="Kelola Preferensi">
            </TextView>
            <ImageButton
                android:id="@+id/imgpref"
                android:layout_width="40dp"
                android:layout_height="100px"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/arrow"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:onClick="PageAkunPreferensi"></ImageButton>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderlayout">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivhelp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/conversation"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivhelp"
                android:layout_marginLeft="20dp"
                android:text="Help Center">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivhelp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:text="Kelola Keluhan Anda">
            </TextView>
            <ImageButton
                android:id="@+id/imghelp"
                android:layout_width="40dp"
                android:layout_height="100px"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/arrow"
                android:scaleType="centerCrop"
                android:onClick="PageAkunHelp"
                android:layout_alignParentRight="true"></ImageButton>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/borderlayout">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivlog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/logout"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivlog"
                android:layout_marginLeft="20dp"
                android:text="Log Out">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivlog"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:text="Keluar dari Akun Anda">
            </TextView>
            <ImageButton
                android:id="@+id/imglog"
                android:layout_width="40dp"
                android:layout_height="100px"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/arrow"
                android:scaleType="centerCrop"
                android:onClick="LoginPage"
                android:layout_alignParentRight="true"></ImageButton>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="97dp"
        android:layout_below="@+id/scrollView">
        <androidx.cardview.widget.CardView
            android:layout_width="85dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imghome"
                    android:layout_width="70dp"
                    android:layout_height="140px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="HomePage"
                    android:src="@drawable/house"></ImageButton>
                <TextView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imghome"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="@string/Home" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgsrc"
                    android:layout_width="60dp"
                    android:layout_height="138px"
                    android:src="@drawable/search"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:onClick="SearchPage"></ImageButton>
                <TextView
                    android:id="@+id/src"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgsrc"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Search" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgfav"
                    android:layout_width="65dp"
                    android:layout_height="135px"
                    android:src="@drawable/heart"
                    android:layout_marginTop="1dp"
                    android:backgroundTint="@color/white"
                    android:onClick="FavoritRestoranPage"
                    android:scaleType="centerCrop"></ImageButton>

                <TextView
                    android:id="@+id/fav"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgfav"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Favorit" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="200px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgres"
                    android:layout_width="70dp"
                    android:layout_height="137px"
                    android:src="@drawable/history"
                    android:backgroundTint="@color/white"
                    android:onClick="HistoryReservasi"
                    android:scaleType="centerCrop"></ImageButton>
                <TextView
                    android:id="@+id/res"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgres"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Reservation" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="200px"
            android:layout_marginRight="20px">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/imgakun"
                    android:layout_width="70dp"
                    android:layout_height="140px"
                    android:backgroundTint="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user"></ImageButton>
                <TextView
                    android:id="@+id/akun"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:layout_marginTop="5px"
                    android:layout_below="@id/imgakun"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:text="Akun" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>