<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    tools:context=".DetailMenu">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/rl1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="83dp"
                    android:layout_margin="20dp"
                    android:id="@+id/dtlimgmen"
                    android:src="@drawable/user"></ImageView>

                <TextView
                    android:id="@+id/tvmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_toRightOf="@id/dtlimgmen"
                    android:text="Pizza"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tagmenu"
                    android:layout_toRightOf="@+id/dtlimgmen"
                    android:text="Makanan Utama"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/hargamenu"
                    android:layout_toRightOf="@+id/dtlimgmen"
                    android:text="Rp.25.0000"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/rl1"
                android:id="@+id/rl2"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl2trk"
                    android:text="Total Rating Keseluruhan">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl2trk"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="65dp"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:id="@+id/totalrating"
                    android:textColor="@color/black"
                    android:text="4.7">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:text="Rasa">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_marginLeft="130dp"
                    android:layout_height="wrap_content"
                    android:text="Ukuran">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_below="@id/rl2trk"
                    android:id="@+id/ratingtemp"
                    android:layout_marginLeft="60dp"
                    android:text="4.7">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_below="@id/rl2trk"
                    android:layout_marginLeft="155dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingpelayanan"
                    android:text="4.5">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingtemp"
                    android:id="@+id/suasana"
                    android:layout_marginLeft="45dp"
                    android:layout_toRightOf="@id/rl2trk"
                    android:text="Kualitas">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingtemp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@id/rl2trk"
                    android:text="Harga"></TextView>

                <TextView
                    android:id="@+id/ratingsuasana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/suasana"
                    android:layout_marginLeft="60dp"
                    android:layout_toRightOf="@id/rl2trk"
                    android:text="4.7"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/suasana"
                    android:layout_marginLeft="155dp"
                    android:layout_toRightOf="@id/rl2trk"
                    android:id="@+id/ratinghigienis"
                    android:text="4.9">
                </TextView>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingtemp"
                    android:layout_marginLeft="195dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="Kesehatan">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/suasana"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="220dp"
                    android:id="@+id/ratingkelayakan"
                    android:text="4.7">
                </TextView>
                <CheckBox
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/favorit"
                    android:layout_below="@id/suasana"
                    android:layout_toRightOf="@id/rl2trk"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="35dp"
                    app:useMaterialThemeColors="false"
                    android:button="@drawable/favoriteselector">
                </CheckBox>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/suasana"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/asalmenu"
                    android:text="Menu ini berasal dari">
                </TextView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/rl2"
                android:id="@+id/rl4"
                android:background="@drawable/borderlayout">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:id="@+id/restoran"
                    android:layout_height="120dp">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl4"
                android:layout_marginLeft="115dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl3detail"
                    android:textColor="#000000"
                    app:backgroundTint="@color/white"
                    android:text="Detail">
                </Button>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl3Review"
                    android:textColor="#000000"
                    app:backgroundTint="#E4E1E1"
                    android:layout_toRightOf="@id/rl3detail"
                    android:onClick="ReviewMenu"
                    android:text="Review">
                </Button>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:background="@drawable/borderlayout">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/scrollView">
            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imghome"
                        android:layout_width="70dp"
                        android:layout_height="140px"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="HomePage"
                        android:src="@drawable/house"></ImageButton>
                    <TextView
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imghome"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Home"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imgsrc"
                        android:layout_width="60dp"
                        android:layout_height="138px"
                        android:src="@drawable/search"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="SearchPage"></ImageButton>
                    <TextView
                        android:id="@+id/src"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgsrc"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Search" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/imgfav"
                        android:layout_width="65dp"
                        android:layout_height="135px"
                        android:src="@drawable/heart"
                        android:layout_marginTop="1dp"
                        android:backgroundTint="@color/white"
                        android:onClick="FavoritRestoranPage"
                        android:scaleType="centerCrop"></ImageButton>
                    <TextView
                        android:id="@+id/fav"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgfav"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Favorit" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="200px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imgres"
                        android:layout_width="70dp"
                        android:layout_height="137px"
                        android:src="@drawable/history"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="HistoryReservasi"></ImageButton>
                    <TextView
                        android:id="@+id/res"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgres"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Reservation" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="200px"
                android:layout_marginRight="20px">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/imgakun"
                        android:layout_width="70dp"
                        android:layout_height="140px"
                        android:backgroundTint="@color/white"
                        android:scaleType="centerCrop"
                        android:onClick="PageAkun"
                        android:src="@drawable/user"></ImageButton>
                    <TextView
                        android:id="@+id/akun"
                        android:layout_width="wrap_content"
                        android:layout_height="40px"
                        android:layout_marginTop="5px"
                        android:layout_below="@id/imgakun"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000000"
                        android:text="Akun" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>