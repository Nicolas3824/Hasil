<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="1dp"
    android:layout_height="180dp">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        android:src="@drawable/user"
        android:id="@+id/foto_menu"
        android:scaleType="centerCrop">
    </ImageButton>

    <TextView
        android:id="@+id/nama_menu"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"
        android:lines="2"
        android:layout_marginRight="50dp"
        android:textColor="@color/black"
        android:text="Restoran"></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="333dp"
        android:id="@+id/tambah"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_marginTop="60dp">
    </ImageView>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="307dp"
        android:layout_marginTop="60dp"
        android:textSize="18dp"
        android:text="0"></TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:id="@+id/kurang"
        android:src="@drawable/ic_baseline_remove_24"
        android:layout_marginTop="60dp">
    </ImageView>

    <TextView
        android:id="@+id/hargamenu"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="70dp"
        android:lines="2"
        android:textColor="@color/black"
        android:text="Family Restoran"></TextView>

    <TextView
        android:id="@+id/deskripsimenu"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="120dp"
        android:lines="3"
        android:text="$$$"
        android:textColor="@color/black"></TextView>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="120dp"
        android:lines="3"
        android:textColor="@color/black"
        app:backgroundTint="#E4E1E1"
        android:text="Next"></Button>

</androidx.cardview.widget.CardView>