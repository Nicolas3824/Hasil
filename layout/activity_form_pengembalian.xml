<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_menu"
    tools:context=".FormPengembalian">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="30dp"
      android:layout_marginTop="20dp"
      android:layout_gravity="center"
      android:text="Form Pengembalian">
  </TextView>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      android:layout_gravity="center"
      android:background = "@drawable/borderlayout"
      android:orientation="vertical">
      <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="10dp"
      android:text="Silahkan Isi Form">
  </TextView>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="10dp"
          android:text="Nama Bank">
      </TextView>
      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="10dp"
          android:id="@+id/bankrekening"
          android:hint="Bank Rekening">
      </EditText>
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Nomor Rekening">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/nomorekening"
        android:hint="Nomor Rekening">
    </EditText>
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Nama Rekening">
    </TextView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/namarekening"
        android:hint="Nama Rekening">
    </EditText>
  </LinearLayout>
  </LinearLayout>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="20dp"
      android:id="@+id/kirim"
      android:textColor="#000000"
      app:backgroundTint="#E4E1E1"
      android:text="Kirim">
  </Button>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="180dp"
      android:layout_below="@+id/scrollView">
    <androidx.cardview.widget.CardView
        android:layout_width="85dp"
        android:layout_height="200px">
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="15dp"
          android:orientation="vertical">
        <ImageButton
            android:id="@+id/imghome"
            android:layout_width="70dp"
            android:layout_height="140px"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:onClick="HomePage"
            android:src="@drawable/house"></ImageButton>
        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:paddingLeft="15dp"
            android:layout_marginTop="5px"
            android:layout_below="@id/imghome"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:text="Home"/>
      </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="200px">
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:orientation="vertical">
        <ImageButton
            android:id="@+id/imgsrc"
            android:layout_width="60dp"
            android:layout_height="138px"
            android:src="@drawable/search"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:onClick="SearchPage"></ImageButton>
        <TextView
            android:id="@+id/src"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_marginTop="5px"
            android:layout_below="@id/imgsrc"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:text="Search" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="200px">
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgfav"
            android:layout_width="65dp"
            android:layout_height="135px"
            android:src="@drawable/heart"
            android:layout_marginTop="1dp"
            android:backgroundTint="@color/white"
            android:onClick="FavoritRestoranPage"
            android:scaleType="centerCrop"></ImageButton>
        <TextView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_marginTop="5px"
            android:layout_below="@id/imgfav"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:text="Favorit" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="200px">
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        <ImageButton
            android:id="@+id/imgres"
            android:layout_width="70dp"
            android:layout_height="137px"
            android:src="@drawable/history"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:onClick="HistoryReservasi"></ImageButton>
        <TextView
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_marginTop="5px"
            android:layout_below="@id/imgres"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:text="Reservation" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="200px"
        android:layout_marginRight="20px">
      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
        <ImageButton
            android:id="@+id/imgakun"
            android:layout_width="70dp"
            android:layout_height="140px"
            android:backgroundTint="@color/white"
            android:scaleType="centerCrop"
            android:onClick="PageAkun"
            android:src="@drawable/user"></ImageButton>
        <TextView
            android:id="@+id/akun"
            android:layout_width="wrap_content"
            android:layout_height="40px"
            android:layout_marginTop="5px"
            android:layout_below="@id/imgakun"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:text="Akun" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>
  </LinearLayout>
</LinearLayout>